        <div class="container text-center my-5 pt-5 pb-4">
            <h1 class="display-3 text-white mb-3 animated slideInDown">Menu</h1>
        </div>
    </div>
    </div>
    <!-- Navbar & Hero End -->

    <!-- Reservation Start -->
    <div class="container-xxl py-5 px-0 wow fadeInUp" data-wow-delay="0.1s" id="tab-order">
        <div class="row g-0">

        </div>
    </div>
    <!--  -->
    
    <div class="container-fluid bg-dark text-light footer pt-5 mt-5 wow fadeIn" data-wow-delay="0.1s">
        <div class="p-5 wow fadeInUp" data-wow-delay="0.2s">
            <h2 class="section-title ff-secondary text-start text-primary fw-normal">Món nướng</h2>
        </div>
        <div class="row mt-3 text-center">
            <% grilFood.forEach(gril=>{ %>
                <div class="col-md-3 mb-3">
                    <div class="card">
                        <img src="<%= gril.imgUrl %>" class="card-img-top img-fluid wow zoomIn" alt="ảnh món ăn">
                        <div class="card-body">
                            <h5 class="card-title"><a href="customer/detailFood/<%=gril._id %>" class="text-decoration-none">
                                    <%= gril.name %>
                                </a></h5>
                            <p style="color: black"> Giá tiền:<%=(gril.price).toLocaleString() %> VND</p>
                        </div>
                    </div>
                </div>
                <% }) %>
        </div>
    </div>
