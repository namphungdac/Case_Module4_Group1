<main id="main" class="main">

    <section class="section profile">
        <div class="row justify-content-center">

            <div class="row g-5 align-items-start">
                <div class="col-lg-5">
                    <div class="row g-3">
                        <div class="col-12 text-center">
                            <img class="img-fluid rounded w-75 wow zoomIn" data-wow-delay="0.1s" src="<%= food.imgUrl  %>">
                            <h2 class="mt-3"><%= food.name %></h2>
                        </div>
                        
                    </div>
                </div>
                <div class="col-lg-7">
                    <ul class="nav nav-tabs nav-tabs-bordered">
                        <li class="nav-item">
                            <button class="nav-link active " data-bs-toggle="tab" data-bs-target="#profile-overview">
                                Tổng Quan
                            </button>
                        </li>
                        <li class="nav-item">
                            <button class="nav-link" data-bs-toggle="tab" data-bs-target="#profile-edit">
                                Cập Nhật Món Ăn
                            </button>
                        </li>
                    </ul>
                    <div class="tab-content pt-2">
                        <div class="tab-pane fade show active profile-overview" id="profile-overview">
                            <h2 class="mt-4">Mô Tả</h2>
                            <p class="mb-4"><%= food.description %></p>
                            <div class="row g-4 mb-4">
                                <div class="col-sm-6">
                                    <span class="fs-4"><b>3</b></span>
                                    <button class="btn btn-lg btn-ok" id="green"><i class="fa fa-thumbs-up fa-xl" aria-hidden="true"></i></button>
                                    <span class="fs-4"><b>5</b></span>
                                    <button class="btn btn-lg btn-ok" id="red"><i class="fa fa-thumbs-down fa-xl" aria-hidden="true"></i></button>
                                    <span class="fs-4"><b>5</b></span>
                                    <a class="btn btn-lg btn-ok"><i class="fa-regular fa-comment fa-xl"></i></a>
                                </div>
                            </div>
                            <div class="text-start">
                                <a href="/admin/foodManager?page=<%= pageCurrent %>&limit=<%= limit %>" class="btn btn-primary">Quay Lại</a>
                            </div>
                        </div>
                        <div class="tab-pane fade profile-edit pt-3" id="profile-edit">
                            <form action="" method="post" enctype="multipart/form-data">
                                <div class="row mb-3">
                                    <label for="pName" class="col-md-4 col-lg-3 col-form-label">Tên</label>
                                    <div class="col-md-8 col-lg-9">
                                        <input name="name" type="text" class="form-control" id="pName" value="<%= food.name %>">
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <label for="pType" class="col-md-4 col-lg-3 col-form-label">Loại</label>
                                    <div class="col-md-8 col-lg-9">
                                        <select class="form-select" name="type" aria-label="select-product">
                                            <% foodTypes.forEach(foodType => { %>
                                                <% if (foodType._id == food.type._id.toString()) {%>
                                                    <option value="<%= foodType._id %>" selected><%= foodType.name %></option>
                                                <% } else { %>
                                                    <option value="<%= foodType._id %>"><%= foodType.name %></option>
                                                <% } %>
                                              <% }) %>
                                        </select>
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <label for="pPrice" class="col-md-4 col-lg-3 col-form-label">Price</label>
                                    <div class="col-md-8 col-lg-9">
                                        <input name="price" type="text" class="form-control" id="pPrice" value="<%= food.price %>">
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <label for="about" class="col-md-4 col-lg-3 col-form-label">Mô Tả</label>
                                    <div class="col-md-8 col-lg-9">
                                        <textarea name="description" class="form-control" id="about"
                                                  style="height: 80px" ><%= food.description%></textarea>
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <label class="col-md-4 col-lg-3 col-form-label">Ảnh</label>
                                    <div class="col-md-8 col-lg-9">
                                        <div class="pt-2">
                                            <label class="form-label" for="customFile">Chọn URL</label>
                                            <input type="file" name="avatar" oninput="uploadImg()" class="form-control"
                                                   id="customFile" value="<%= food.imgUrl %>">
                                        </div>
                                    </div>
                                </div>
                                <div class="text-center mt-4">
                                    <button type="submit" class="btn btn-primary">Cập Nhật</button>
                                    <a href="/admin/foodManager?page=<%= pageCurrent %>&limit=<%= limit %>" class="btn btn-secondary">Quay Lại</a>
                                </div>
                            </form><!-- End Profile Edit Form -->
                        </div>
                    </div>

                </div>
            </div>
        </div>
        </div>
        </div>
    </section>

