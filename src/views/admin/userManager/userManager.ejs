                    </ul><!-- End Profile Dropdown Items -->
                </li><!-- End Profile Nav -->

            </ul>
        </nav><!-- End Icons Navigation -->

    </header><!-- End Header -->

    <!-- ======= Sidebar ======= -->
    <aside id="sidebar" class="sidebar">

        <ul class="sidebar-nav" id="sidebar-nav">

            <li class="nav-item">
                <a class="nav-link " href="admin/home">
                    <i class="bi bi-grid"></i>
                    <span>Danh Mục</span>
                </a>
            </li><!-- End Home Nav -->
            <li class="nav-item">
                <a class="nav-link collapsed" data-bs-target="#components-nav" data-bs-toggle="collapse" href="#">
                    <i class="bi bi-file-person"></i><span>Quản Lý Tài Khoản Khách</span>
                    <i class="bi bi-chevron-down ms-auto"></i>
                </a>
                <ul id="components-nav" class="nav-content collapse " data-bs-parent="#sidebar-nav">
                    <li>
                        <a href="/admin/listUser">
                            <i class="bi bi-circle"></i><span>Danh Sách Tài Khoản</span>
                        </a>
                    </li>
                    <li>
                        <a href="/admin/createUser">
                            <i class="bi bi-circle"></i><span>Thêm Mới Tài Khoản</span>
                        </a>
                    </li>
                </ul>
            </li>
            <li class="nav-item">
                <a class="nav-link collapsed" data-bs-target="#charts-nav" data-bs-toggle="collapse" href="#">
                    <i class="ri-cake-line"></i><span>Quản Lý Món Ăn</span>
                    <i class="bi bi-chevron-down ms-auto"></i>
                </a>
                <ul id="charts-nav" class="nav-content collapse " data-bs-parent="#sidebar-nav">
                    <li>
                        <a href="/admin/foodManager">
                            <i class="bi bi-circle"></i><span>Danh Sách Món Ăn</span>
                        </a>
                    </li>
                    <li>
                        <a href="/admin/createFood">
                            <i class="bi bi-circle"></i><span>Thêm Mới Món Ăn</span>
                        </a>
                    </li>
                </ul>
            </li>
            <li class="nav-item">
                <a class="nav-link collapsed" data-bs-target="#forms-nav" data-bs-toggle="collapse" href="#">
                    <i class="ri-table-line"></i><span>Quản Lý Bàn</span>
                    <i class="bi bi-chevron-down ms-auto"></i>
                </a>
                <ul id="forms-nav" class="nav-content collapse " data-bs-parent="#sidebar-nav">
                    <li>
                        <a href="/admin/tableManager">
                            <i class="bi bi-circle"></i><span>Danh Sách Bàn</span>
                        </a>
                    </li>
                    <li>
                        <a href="/admin/addTable">
                            <i class="bi bi-circle"></i><span>Thêm Mới Bàn</span>
                        </a>
                    </li>
                </ul>
            </li>
            <li class="nav-item">
                <a class="nav-link collapsed" data-bs-target="#tables-nav" data-bs-toggle="collapse" href="#">
