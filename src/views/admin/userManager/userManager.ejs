</aside><!-- End Sidebar-->

<main id="main" class="main">

      <div class="card mt-2">
        <div class="card-header d-flex justify-content-between align-items-center">
          <div>
            <form action method="post" id="formSize">
              <select name="size" id="size_page" onchange="submitForm()">
                <option value="1">1</option>
                <option value="2">2</option>
              </select>
              <label for="size_page">Items/Page</label>
            </form>
          </div>
          <div><h3>Danh sách Khách hàng</h2></div>
          <div><b>Total: <%= total %></div>
            <div>
                <form class="form-inline my-2 my-lg-0 d-flex justify-content-end" method="get">
                    <input class="form-control mr-sm-2 w-75 " type="search" placeholder="Tìm kiếm" aria-label="Search" name="search">
                    <button class="btn btn-outline-success my-2 my-sm-0 ms-2" type="submit"><i class="fa-solid fa-magnifying-glass"></i></button>
                </form>
            </div>
        </div>
        <div class="card-body text-center">
          <table
            class="table table-striped table-bordered table-hover text-center align-middle">
            <tr>
              <th>#</th>
              <th>Avatar</th>
              <th>UserName</th>
              <th>Password</th>
              <th>Numberphone</th>
            </tr>
            <% users.forEach((user,index)=>{ %>
                <tr>
                    <th><%= index+1 %></th>
                    <td class="col-1">
                        <img src="upload/avatar/<%= user.avatar %>" class="img-fluid" alt="ảnh">
                    </td>
                    <td><%= user.username %></td>
                    <td><%= user.password %></td>
                    <td><%= user.phoneNumber %></td>
                    <td>
                      <a
                        onclick="return confirm('Are you sure you want to delete this staff?')"
                        href="/admin/delete/<%= user.id %>"
                        class="btn btn-danger">Delete</a>
                      </td>
                  </tr>
            <% }) %>
          </table>
        </div>
      </div>
    </div>

    </main>


<a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i
        class="bi bi-arrow-up-short"></i></a>

