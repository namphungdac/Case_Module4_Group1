<main id="main" class="main">

    <section class="section profile">
        <div class="row justify-content-center">

            <div class="col-xl-8">

                <div class="card">
                    <div class="card-body pt-3">
                        <!-- Bordered Tabs -->
                        <ul class="nav nav-tabs nav-tabs-bordered">

                            <li class="nav-item">
                                <h3>Cập Nhật Bàn</h3>
                            </li>
                        </ul>
                        <div class="tab-content pt-2">

                            <div class="tab-pane fade profile-edit pt-3" id="profile-edit"></div>

                        </div>

                        <!-- Profile Edit Form -->
                        <form action="" method="post" enctype="multipart/form-data">
                            <div class="row mb-3">
                                <label for="pName" class="col-md-4 col-lg-3 col-form-label">Tên</label>
                                <div class="col-md-8 col-lg-9">
                                    <input name="name" type="text" class="form-control" id="pName" value="">
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label for="pType" class="col-md-4 col-lg-3 col-form-label">Số người</label>
                                <div class="col-md-8 col-lg-9">
                                    <select class="form-select" name="type" aria-label="select-product">
                                        <option selected value="user">Chọn Số Người</option>
                                        <option value="admin">Dưới 5</option>
                                        <option value="user">6-10</option>
                                        <option value="user">10-15</option>
                                    </select>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label for="pPrice" class="col-md-4 col-lg-3 col-form-label">Price</label>
                                <div class="col-md-8 col-lg-9">
                                    <input name="price" type="text" class="form-control" id="pPrice" value="">
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label for="about" class="col-md-4 col-lg-3 col-form-label">Mô Tả</label>
                                <div class="col-md-8 col-lg-9">
                                    <textarea name="pDesc" class="form-control" id="about"
                                              style="height: 80px"></textarea>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label class="col-md-4 col-lg-3 col-form-label">Ảnh</label>
                                <div class="col-md-8 col-lg-9">
                                    <div class="pt-2">
                                        <label class="form-label" for="customFile">Chọn URL</label>
                                        <input type="file" name="pImg" oninput="uploadImg()" class="form-control"
                                               id="customFile">
                                    </div>
                                </div>
                            </div>
                            <div class="text-center mt-4">
                                <button type="submit" class="btn btn-primary">Cập Nhật</button>
                            </div>
                        </form><!-- End Profile Edit Form -->

                    </div>
                </div><!-- End Bordered Tabs -->
            </div>
        </div>
