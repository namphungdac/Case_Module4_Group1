<main id="main" class="main">
    <div class="card mt-2">
        <div class="card-header d-flex justify-content-between align-items-center">
            <div>
                <form action method="post" id="formSize">
                    <select name="size" id="size_page" onchange="submitForm()">
                        <option value="<%= limit %>" selected><%= limit %></option>
                        <% let arr = [3, 5, 10]
                        arr.forEach(item => {
                        if (item != limit) {%>
                        <option value="<%= item %>"><%= item %></option>
                        <%}});%>
                    </select>
                <label for="size_page">SL/Trang &lpar;Tổng : <%= total %>&rpar;</label>
                </form>
            </div>
            <div class="fs-4"><span><b>Danh Sách Đơn Chưa Xong</b></span></div>
            <div>
                <form class="form-inline my-2 my-lg-0 d-flex justify-content-end" method="get">
                    <input class="form-control mr-sm-2 w-75 " type="date" placeholder="Tìm kiếm" aria-label="Search" name="date">
                    <button class="btn btn-outline-success my-2 my-sm-0 ms-2" type="submit"><i class="fa-solid fa-magnifying-glass"></i></button>
                </form>
            </div>
        </div>

        <div class="card-body text-center mt-4">
            <% if (orders.length === 0 && pageCurrent === 1) {%>
                <tr><h5 class="mt-4 text-danger font-weight-bold">Không có dữ liệu!</h5></tr>
            <% } else { %>
            <table class="table table-striped table-bordered table-hover text-center align-middle">
                <thead class="bg-secondary text-white align-middle">
                    <tr>
                        <th>Mã Order</th>
                        <th>Bàn</th>
                        <th>SĐT</th>
                        <th>Check-in</th>
                        <th>Số Người</th>
                        <th>Số Tiền &lpar;VNĐ&rpar;</th>
                        <th>Trạng Thái</th>
                        <th>Lựa chọn</th>
                    </tr>
                </thead>
                <tbody>
                    <% orders.forEach((order,index)=>{ %>
                        <tr style="font-weight: normal;" id="Order-<%= order._id %>">
                            <% if (order.status !== "Đang Chờ") { %>
                                <th class="col-1"><a href="admin/<%= order._id%>/orderDetail"><%= order._id%></a></th>
                            <% } else { %>
                                <th class="col-1"><%= order._id%></th>
                            <% } %>
                            <td class="col-2">
                                <div class="form-group">
                                    <select class="custom-select rounded shadow" id="order-table-<%= order._id %>">
                                        <% if (order.table === null) {%>
                                            <option value="null" selected>Trống</option>
                                            <% tables.forEach(item => {
                                                if (item.status === "Trống") {%>
                                                <option value="<%= item._id %>"><%= item.name %></option>
                                            <%}
                                            });
                                        } else {%>
                                            <option value="null">Trống</option>
                                            <% tables.forEach(item => {
                                                if (item.name == order.table.name) {%>
                                                <option value="<%= item._id %>" selected><%= item.name %></option>
                                            <%} else if (item.status === "Trống") {%>
                                                <option value="<%= item._id %>"><%= item.name %></option>
                                            <%}
                                            });
                                        } %>  
                                    </select>
                                    <button class="btn btn-secondary" onclick="changeOrder('<%= order._id %>')"><i class="fa-regular fa-floppy-disk"></i></button>
                                </div>
                            </td>
                            <td><%= order.phone  %></td>
                            <td class="col-2"><%= (order.checkin).toLocaleString() %></td>
                            <td><%= order.numberPerson %></td>
                            <% if(order.cost !== null) {%>
                            <td><%= (order.cost).toLocaleString() %></td>
                            <% } else {%>
                                <td>0</td>
                            <% } %>
                            <td><%= order.status %></td>
                            <td class="col-2">
                                <% if (order.status === "Đang Chờ") { %>
                                    <button onclick="deleteItem('<%= order._id %>', 'Order')" class="btn btn-danger delete-btn-item">
                                        <i class="fa-solid fa-trash-can"></i>
                                    </button>
                                    <a href="/admin/updateOrder/<%= order._id%>?page=<%= pageCurrent %>&limit=<%= limit %>" class="btn btn-primary">
                                        <i class="fa-sharp fa-solid fa-pencil"></i>
                                    </a>
                                <% } %>

                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
            <nav aria-label="Page navigation example">
                <ul class="pagination">
                    <% if (pageCurrent === 1) {%>
                        <li class="page-item d-none">
                    <% } else { %>
                        <li class="page-item">
                    <% } %>
                        <a class="page-link" id="prePage"
                        href="/admin/orderManager?page=<%= pageCurrent - 1 %>&limit=<%= limit %>">Pre</a>
                    </li>
                    <% for (let i = 1; i <= totalPage; i++) {
                        if (pageCurrent === i) {%>
                            <li class="page-item active" aria-current="page">
                        <% } else { %>
                            <li class="page-item">
                        <% } %>
                                <a class="page-link" href="/admin/orderManager?page=<%= i %>&limit=<%= limit %>"><%= i %></a>
                            </li>
                        <% } %>
                    <% if (pageCurrent === totalPage) {%>
                        <li class="page-item d-none">
                    <% } else { %>
                        <li class="page-item">
                    <% } %>
                        <a class="page-link" id="afterPage"
                        href="/admin/orderManager?page=<%= pageCurrent + 1 %>&limit=<%= limit %>">Next</a>
                    </li>
                </ul>
            </nav>
            <div class="modal" id="deleteModal">
                <div class="modal-content">
                    <p><b>Bạn có chắc chắn muốn xóa?</b></p>
                    <button type="button" class="btn btn-primary mb-2" id="confirmDelete">Có</button>
                    <button type="button" class="btn btn-secondary" id="cancelDelete">Không</button>
                </div>
            </div>
            <% } %> 
        </div> 
    </div>
