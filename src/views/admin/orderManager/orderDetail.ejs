                        </div>
                        <div class="table-wrapper-scroll-y my-custom-scrollbar m-2">
                            <table class="table table-hover table-striped align-middle text-center">
                                <thead class="table-bordered">
                                    <tr class="align-middle">
                                    <th scope="col">#</th>
                                    <th scope="col">Ảnh</th>
                                    <th scope="col">Tên</th>
                                    <th scope="col">Số Lượng</th>
                                    <th scope="col">Đơn Giá</th>
                                    <th scope="col">Thành Tiền</th>
                                    <th scope="col">Lựa Chọn</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% arr.forEach((item, index)=> { %>
                                    <tr>
                                        <td><%= index + 1 %></td>
                                        <td>
                                            <img src="<%= item.food.imgUrl %> " width="50" height="50" alt="..." class="img-responsive">
                                        </td>
                                        <td><%= item.food.name %></td>
                                        <td>
                                            <div class="d-flex justify-content-center">
                                                <button id="btn-add-<%= item._id %>" onclick="changeQuantity('add','<%= item._id %>')" class="btn btn-secondary btn-sm"><i class="fa-regular fa-plus"></i></button>
                                                <input id="food-qty-<%= item._id %>" style="border-style: hidden" type="number" class="form-control text-center w-50 mx-2" value="<%= item.quantity %>">
                                                <button id="btn-minus-<%= item._id %>" onclick="changeQuantity('minus', '<%= item._id %>')" class="btn btn-secondary btn-sm"><i class="fa-solid fa-minus"></i></button>
                                            </div>
                                        </td>
                                        <td><input id="food-unit-price-<%= item._id %>" type="number" class="form-control text-center w-100" value="<%= item.food.price %>" disabled></td>
                                        <td><input id="food-multi-price-<%= item._id %>" type="number" class="form-control text-center w-100" value="<%= item.food.price * item.quantity%>" disabled></td>
                                        <td class="col-2">
                                            <button class="btn btn-info btn-sm"><i class="fa-solid fa-arrows-rotate"></i></button>
                                            <button class="btn btn-danger btn-sm"><i class="fa-solid fa-trash-can"></i></button>								
                                        </td>
                                    </tr>
                                    <% }) %>
                                </tbody>

